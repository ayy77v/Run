<p id="notice"><%= notice %></p>

<h1>Picks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <td>From</td>
      <td>To</td>
       <td>Creator </td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @picks.each do |pick| %>
      <tr>
        <td><%= pick.from %></td>
        <td><%= pick.to %></td>
         <td> <%= pick.user.email %> </td>
     <td><button type="button">Add</button> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pick', new_pick_path, class: "btn btn-sm btn-default" %>
